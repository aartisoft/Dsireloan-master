<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hederbackground"
    android:gravity="center"

    android:orientation="vertical"
    android:padding="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/imagelogo"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp" />



    <TextView
        android:id="@+id/textView_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="30dp"
        android:textColor="@color/whiteheadercolor"
        android:textSize="22dp"
        android:textStyle="normal|bold" />


    <TextView
        android:id="@+id/textView_agent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/whiteheadercolor"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_border"
        android:textColor="@color/whiteheadercolor"
        android:padding="5dp"
        android:layout_marginBottom="30dp"

        android:textSize="16dp" />

    <TextView
        android:id="@+id/text_view_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:textColor="@color/whiteheadercolor"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/buttonviewprofile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Edit Profile"
        android:layout_marginBottom="0dp"
        android:textColor="@color/whiteheadercolor"
        android:textSize="14dp" />
</LinearLayout>
